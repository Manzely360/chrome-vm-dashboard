# Chrome VM Dashboard - Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values

aws_region = "us-west-2"
instance_type = "t3.medium"
volume_size = 50
min_instances = 1
max_instances = 10
desired_instances = 3

# Required: Your SSH public key
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC... your-public-key-here"

# Required: Your dashboard URL
dashboard_url = "https://your-dashboard.com"

# Required: Your domain name for Cloudflare tunnels
domain_name = "your-domain.com"

# Optional: Project configuration
project_name = "chrome-vm-dashboard"
environment = "production"

# Optional: Additional tags
tags = {
  Owner = "your-name"
  Project = "chrome-vm-dashboard"
  Environment = "production"
}
