# Chrome VM Dashboard Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Domain Configuration
DOMAIN_NAME=localhost
DASHBOARD_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=sqlite:./data/chrome_vm.db

# Logging Configuration
LOG_LEVEL=info

# AWS Configuration (for VM provisioning)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Cloudflare Configuration (for secure access)
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# Security Configuration
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# VM Configuration
DEFAULT_INSTANCE_TYPE=t3.medium
MAX_VM_INSTANCES=10
VM_PROVISIONING_TIMEOUT=300000

# Script Execution Configuration
SCRIPT_TIMEOUT=300000
MAX_SCRIPT_SIZE=10485760

# NoVNC Configuration
NOVNC_PORT=6080
VNC_PASSWORD=your-vnc-password

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8080
